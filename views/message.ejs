<% if(error && error != ""){ %>
    <div id="error-message" class="center w3-panel w3-red w3-card-4" onclick="window.location.href='/'" style="cursor: pointer">
        <p class="w3-xlarge"><%= error %></p>
        <p class="w3-small">Click back to the home page</p>
    </div>
    <script>
        $(document).ready(function () {
            $("#error-message").delay(5000).hide(300);
        });
    </script>
<% } %>
<% if(info && info != ""){ %>
    <div id="info-message" class="center w3-panel w3-green w3-card-4">
        <p class="w3-xlarge"><%= info %></p>
    </div>
    <script>
        $(document).ready(function () {
            $("#info-message").delay(2000).hide(300);
        });
    </script>
<% } %>